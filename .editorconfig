# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 120
tab_width = 2
trim_trailing_whitespace = true

[{*.rb,*.rake}]
indent_size = 2
indent_style = space

[{*.har,*.json}]
indent_size = 2
indent_style = space

[{*.lock,*.yaml,*.yml}]
indent_size = 2
